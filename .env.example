# Brickface Enterprise Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# AI & Machine Learning APIs
# ===========================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
CODEIUM_API_KEY=your_codeium_api_key_here
BRAVE_API_KEY=your_brave_search_api_key_here

# ===========================================
# Google Cloud Platform
# ===========================================
GOOGLE_CLOUD_PROJECT=boxwood-charmer-467423-f0
GOOGLE_APPLICATION_CREDENTIALS=./credentials/service-account.json
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_WORKSPACE_CLIENT_ID=your_workspace_client_id_here
GOOGLE_WORKSPACE_CLIENT_SECRET=your_workspace_client_secret_here
GOOGLE_WORKSPACE_REFRESH_TOKEN=your_workspace_refresh_token_here
GOOGLE_DRIVE_CLIENT_ID=your_drive_client_id_here
GOOGLE_DRIVE_CLIENT_SECRET=your_drive_client_secret_here
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3000/auth/callback

# ===========================================
# Business Integrations
# ===========================================
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token_here
HUBSPOT_PORTAL_ID=your_portal_id_here
HUBSPOT_CLIENT_ID=your_hubspot_client_id_here
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret_here

# ClickUp Project Management & Task Automation
CLICKUP_API_TOKEN=your_clickup_api_token_here
CLICKUP_TEAM_ID=your_clickup_team_id_here
CLICKUP_SPACE_ID=your_clickup_space_id_here
CLICKUP_FOLDER_ID=your_clickup_folder_id_here
CLICKUP_LIST_ID=your_clickup_list_id_here

# Dialpad Communication
DIALPAD_API_KEY=your_dialpad_api_key_here
DIALPAD_API_URL=https://dialpad.com/api/v2

# ===========================================
# n8n Workflow Automation
# ===========================================
N8N_API_URL=http://localhost:5678
N8N_API_KEY=your_n8n_api_key_here
N8N_WEBHOOK_URL=your_n8n_webhook_url_here

# ===========================================
# Financial Integration (Ramp)
# ===========================================
RAMP_CLIENT_ID=your_ramp_client_id_here
RAMP_CLIENT_SECRET=your_ramp_client_secret_here
RAMP_ACCESS_TOKEN=your_ramp_access_token_here

# ===========================================
# Database Configuration
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=brickface_enterprise
DB_USER=your_db_user_here
DB_PASSWORD=your_db_password_here

# ===========================================
# GitHub Integration
# ===========================================
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here

# ===========================================
# Email & Communication
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@brickface.com
SMTP_PASSWORD=your_app_password_here

# Gmail API OAuth Credentials (for inbox audit and email automation)
# Get these from https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID (Web application) with redirect URI: http://localhost:3000/oauth2callback
GMAIL_OAUTH_CLIENT_ID=your_gmail_oauth_client_id_here
GMAIL_OAUTH_CLIENT_SECRET=your_gmail_oauth_client_secret_here

# Service Account for Gmail (requires domain-wide delegation in Google Workspace Admin)
GOOGLE_SERVICE_ACCOUNT_CREDENTIALS={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"...","universe_domain":"googleapis.com"}

# ===========================================
# System Configuration
# ===========================================
NODE_ENV=development
LOG_LEVEL=info
PORT=3000
BASE_URL=http://localhost:3000

# ===========================================
# Security & Authentication
# ===========================================
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
SESSION_SECRET=your_session_secret_here

# ===========================================
# Monitoring & Analytics
# ===========================================
GOOGLE_ANALYTICS_ID=your_ga_id_here
SENTRY_DSN=your_sentry_dsn_here